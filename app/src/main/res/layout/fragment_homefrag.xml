<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefrag"
    android:background="@color/bb"
    android:padding="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardbook"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        >
        <ImageView
            android:id="@+id/imagebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_image_24"
            >

        </ImageView>


    </androidx.cardview.widget.CardView>



    <EditText
        android:id="@+id/namebook"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backedit"
        android:layout_below="@id/cardbook"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:hint="Name Book"
        android:textColor="@color/white"
        android:textColorHint="#757575"
        >
    </EditText>

    <EditText
        android:id="@+id/auteurdebook"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backedit"
        android:layout_below="@id/namebook"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:hint="Auteur de book"
        android:textColor="@color/white"
        android:textColorHint="#757575"
        >
    </EditText>

    <EditText
        android:id="@+id/descripdebook"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backedit"
        android:layout_below="@id/auteurdebook"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:hint="Description De Book"
        android:textColor="@color/white"
        android:textColorHint="#757575"
        >
    </EditText>

    <EditText
        android:id="@+id/category"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backedit"
        android:layout_below="@id/descripdebook"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:hint="Gatgory de book"
        android:textColor="@color/white"
        android:textColorHint="#757575"
        >
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/telecharger"
        android:text="Telecharger Book To database"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/backedit"
        android:backgroundTint="#757575"
        android:textColor="@color/black"
        android:layout_below="@id/category"
        android:layout_marginTop="20dp"
        >

    </androidx.appcompat.widget.AppCompatButton>



</RelativeLayout>